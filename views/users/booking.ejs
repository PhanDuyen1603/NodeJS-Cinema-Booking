                                                        <td>Tổng: </td>
                                                        <td class="price" colspan="2">0&nbsp;₫</td>
                                                        <input id="txtTotalMoney" class="item-options"
                                                            name="txtTotalMoney" value="">
                                                    </tr>
                                                </tfoot>

                                            </table>

                                            <!-- MUA VÉ -->
