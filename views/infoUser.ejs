<!DOCTYPE html>
<html>

<head>
    <title>Chỉnh sửa thông tin cá nhân </title>

    <script src="//maxcdn.  bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="/public/js/jquery/user/jquery-1.11.1.min.js"></script>
    <script src="/public/js/jquery/user/jquery-latest.js"></script>

    <script src="/public/js/jquery/noconflict.js"></script>
    <script src="/public/js/jquery/varien_format_js.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <link rel="stylesheet" type="text/css" href="/public/css/user/infoUser.css">
    <link rel="stylesheet" type="text/css" href="/public/css/home.css">

</head>

<body class="bgInfoUser">
    <div class="row">
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-3">
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6">
            <h1 style="text-align: center; color: cornsilk">Thông tin cá nhân</h1>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-3">
            <form action="/updateInfo/pagedf" method="POST">
                <div style="text-align: right; padding-right: 20%; margin-top: 20px ">
                    <button type="submit" class="btnuser0">Trang chủ</button>
                </div>
            </form>
        </div>
    </div>

    <div class="container">
        <div class="row profile">
            <div class="col-md-3">
                <div class="profile-sidebar">
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name"><%= user.dataValues.user_Name %></div>
                        <div class="profile-usertitle-job">[Nghề nghiệp user]</div>
                    </div>
                    <div class="profile-usermenu">
                        <ul class="nav">
                            <div class="profile-userbuttons">
                                <button id="myBtn0" class="btnuser"><a href="#myModal0" data-toggle="tab"
                                        aria-expanded="true">Đổi tên</a></button>
                            </div>
                            <li class="active">
                                <a href="#infofull" data-toggle="tab" aria-expanded="true">
                                    <i class="glyphicon glyphicon-home"></i>
                                    Thông tin tổng quan
                                </a>
                            </li>
                            <li class="">
                                <a href="#infobasic" data-toggle="tab" aria-expanded="false">
                                    <i class="glyphicon glyphicon-user"></i>
                                    Tài khoản
                                </a>
                            </li>
                            <li class="">
                                <a href="#infohelp" data-toggle="tab" aria-expanded="false">
                                    <i class="glyphicon glyphicon-flag"></i>
                                    Trợ giúp
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="profile-content">
                    <div id="infofull" class="tab-pane fade in active" style="z-index: 1">
                        <% include users/infofull.ejs %>
                    </div>
                    <div id="infobasic" class="tab-pane fade" style="z-index: 0">
                        <% include users/infobasic.ejs %>
                    </div>
                    <div id="infohelp" class="tab-pane fade" style="z-index: 0">
                        <% include users/infohelp.ejs %>
                    </div>
                    <div id="myModal0" class="modal" style="z-index: 0">
                        <div class="modal-content">
                            <form action="/updateInfo/name" method="POST">
                                <div class="row" style="text-align: center">
                                    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 col-9 title-info">
                                        <p>Vui lòng cung cấp tên thật</p>
                                    </div>
                                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-3">
                                        <span class="exit0 exit_df">&times;</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 col-9">
                                        <input type='text' name="txtUserName" placeholder="Nhập tên của bạn vào đây"
                                            style="width: 60%">
                                    </div>
                                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-3">
                                        <button type="submit" class="btnuser">Cập nhật</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Đoạn xử lý nổi phần tử-->
    <script>
        $(function () {
            var href_a;
            $('a').click(function () {
                href_a = $(this).attr('href');
                if (href_a == "#myModal0") {
                    $("#infofull").css("z-index", "0");
                    $("#infobasic").css("z-index", "0");
                    $("#infohelp").css("z-index", "0");
                    $("#myModal0").css("z-index", "2");
                };
                if (href_a == "#infofull") {
                    $("#infofull").css("z-index", "1");
                    $("#infobasic").css("z-index", "0");
                    $("#infohelp").css("z-index", "0");
                    $("#myModal0").css("z-index", "0");
                };
                if (href_a == "#infobasic") {
                    $("#infofull").css("z-index", "0");
                    $("#infobasic").css("z-index", "1");
                    $("#infohelp").css("z-index", "0");
                    $("#myModal0").css("z-index", "0");
                };
                if (href_a == "#infohelp") {
                    $("#infofull").css("z-index", "0");
                    $("#infobasic").css("z-index", "0");
                    $("#infohelp").css("z-index", "1");
                    $("#myModal0").css("z-index", "0");
                };
            });
        });
        // Get the modal
        var modal0 = document.getElementById("myModal0");

        // Get the button that opens the modal
        var btn0 = document.getElementById("myBtn0");

        // Get the <span> element that closes the modal
        var span0 = document.getElementsByClassName("exit0")[0];

        // When the user clicks the button, open the modal 
        btn0.onclick = function () {
            modal0.style.display = "block";
        }

        // When the user clicks on <span> (x), close the modal
        span0.onclick = function () {
            modal0.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal0) {
                modal0.style.display = "none";
            }
        }
    </script>


</body>

</html>