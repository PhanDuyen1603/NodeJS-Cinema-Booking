<script>
    var selectedCineplex = document.getElementById("form_control1");
    var title_cineplexName = document.getElementById("cineplexName-title");
    var showtime_begin_main = document.getElementById("showtime_begin_main");
    var form_LoadShowtimes = document.forms['form_LoadShowtimes'];
    var input_cineplexID = document.getElementById("input_cineplexID");

    selectedCineplex.onchange = function () {
        var selectedCineplexName = selectedCineplex.options[selectedCineplex.selectedIndex].text;
        var cineplexID = selectedCineplex.value;

        if (cineplexID) {
            input_cineplexID.value = cineplexID;
            console.log(input_cineplexID.value);
            form_LoadShowtimes.submit();
        }

        if (selectedCineplexName) {
            title_cineplexName.innerHTML = selectedCineplexName;
        }
    }
</script>