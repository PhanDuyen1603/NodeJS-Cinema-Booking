<% if(film.upcomingFilms){var upcomingFilms=film.upcomingFilms %>
    <% for (var i=0; i < upcomingFilms.length; i++ ) { %>
        <div class="col-md-3 col-sm-3 movie-item">
            <div class="article-movie-home">
                <a href="/phim/<%= upcomingFilms[i].film_ID %>">
                    <img id="img-film-indexContent" src="<%= upcomingFilms[i].film_Image %>" alt="Không load được ảnh"
                        width="216" height="324">
                </a>
            </div>

            <a href="/phim/<%= upcomingFilms[i].film_ID %>">
                <div class="title-movie">
                    <h4>
                        <%= upcomingFilms[i].film_Name %>
                    </h4>
                </div>
            </a>
        </div>
        <% } %>
            <% }else{ %>
                <h1>Do dịch Covid-19, chưa có phim nào sắp được công chiếu !!</h1>
                <% } %>