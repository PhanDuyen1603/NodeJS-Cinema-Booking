<% const filmNoPublic = film.filmNoPublic %> 
<% var j = 0; %>

<% for (var i = 0; i < filmNoPublic.length; i++ ) { %>
    <% if (j <= 7) { %>
        <div class="col-md-3 col-sm-3 movie-item">
            <div class="article-movie-home">
                <a href="/phim/<%= filmNoPublic[i].dataValues.film_ID %>">
                    <img id="img-film-indexContent" src="<%= filmNoPublic[i].dataValues.film_Image %>" alt="Không load được ảnh"
                        width="216" height="324">
                </a>
            </div>
        
            <a href="/phim/<%= filmNoPublic[i].dataValues.film_ID %>">
                <div class="title-movie">
                    <h4><%= filmNoPublic[i].dataValues.film_Name %></h4>
                </div>
            </a>
        </div>
    <% } %>
    <% j++; %>
<% } %>
